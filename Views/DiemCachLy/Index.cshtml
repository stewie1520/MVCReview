@{
  ViewData["Title"] = "Điểm cách ly";
}

@model List<DiemCachLy>

<div class="row">
  <div class="col-lg-12">
    <form asp-action="LietKeTheoDiemCachLy" method="get">
      <table>
        <tbody>
          <tr>
            <td>Tên điểm cách ly</td>
            <td>
              <select name="maDiemCachLy">
                @foreach (var diemCachLy in Model)
                {
                  <option value="@diemCachLy.MaDiemCachLy">@diemCachLy.TenDiemCachLy</option>
                }
              </select>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <button type="submit" class="btn btn-success">Liệt kê</button>
            </td>
          </tr>
        </tbody>
      </table>
    </form>
  </div>
</div>
